// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Activity {
  id               String          @id @default(uuid())
  slug             String          @unique
  title            String
  shortDescription String
  longDescription  String
  imageUrl         String          // Keep for backward compatibility (primary image)
  images           ActivityImage[] // Multiple images
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt
}

model ActivityImage {
  id         String   @id @default(uuid())
  url        String
  activity   Activity @relation(fields: [activityId], references: [id], onDelete: Cascade)
  activityId String
  order      Int      @default(0)
  createdAt  DateTime @default(now())

  @@index([activityId])
}

model InvestorApplication {
  id                  String   @id @default(uuid())
  // Personal Information
  fullName            String
  email               String
  phoneNumber         String
  organization        String?
  address             String
  socialWebsite       String?
  // Investment Information
  financialInvestor   Boolean  @default(false)
  advisorMentor       Boolean  @default(false)
  businessPartner     Boolean  @default(false)
  otherType           String?
  sector              String
  experienceSkills    String
  investmentModel     String
  // Metadata
  status              String   @default("pending") // pending, reviewed, approved, rejected
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  @@index([email])
  @@index([createdAt])
}

model EntrepreneurApplication {
  id                  String   @id @default(uuid())
  // Personal Information
  fullName            String
  email               String
  phoneNumber         String
  currentOccupation   String
  address             String
  socialLinks         String?
  // Idea and Business Details
  businessName        String?
  ideaSummary         String
  problemSolved       String
  targetCustomer      String?
  businessStage       String   // idea, research, testing, operating
  physicalAssets      String
  mentalAssets        String
  // Requirements
  assistanceNeeded    String
  expectations        String
  // Metadata
  status              String   @default("pending") // pending, reviewed, approved, rejected
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  @@index([email])
  @@index([createdAt])
}
